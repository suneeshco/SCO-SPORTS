    <script>
        const category=document.getElementById('CategoryName')
        const errorMessage=document.getElementById('errorMessage')

        function categoryCheck(element){
            if(element.trim().length<1){
                errorMessage.textContent="Field Cannot Be Empty !"
                return false
            }
            errorMessage.textContent=""
            return true
        }

        function checkForm(){
            isValid=categoryCheck(category.value)
            if(isValid){
                return true
            }else{
                return false
            }
        }



       
