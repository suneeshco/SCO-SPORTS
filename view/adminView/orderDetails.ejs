    <script>
        // Assuming order.status contains the desired default value
        var orderStatus = "<%= order.status %>";
        var selectElement = document.getElementById("orderStatus");
    
        for (var i = 0; i < selectElement.options.length; i++) {
            if (selectElement.options[i].value === orderStatus) {
                selectElement.options[i].selected = true;
                break;
            }
        }
    </script>
    <script>
        function confirmUpdate(form) {
        // Use SweetAlert for the confirmation dialog
        Swal.fire({
            title: '',
            text: 'Do you want to change the status of the order',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, change!',
            cancelButtonText: 'No, cancel',
        }).then((result) => {
            if (result.isConfirmed) {
                
                form.submit()
            }else{
                return false
            }
        });
        
        return false;
    }
    </script>
