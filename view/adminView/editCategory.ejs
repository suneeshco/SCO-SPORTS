    <script>
        const msg = document.getElementById("msg")
        setTimeout(() => {
            msg.innerHTML = ''
        }, 5000)

        function confirmUpdate(form) {
        // Use SweetAlert for the confirmation dialog
        if(checkForm()){
            Swal.fire({
            title: '',
            text: 'Do you want to update this category',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, update!',
            cancelButtonText: 'No, cancel',
        }).then((result) => {
            if (result.isConfirmed) {
                // If the user confirms, proceed with the deletion
                form.submit()
            }else{
                return false
            }
        });
        // Prevent the link from navigating immediately
        return false;
        }
        
        
    }
    </script>
    <script>
        const category=document.getElementById('CategoryName')
        const discount=document.getElementById('categoryDiscount')
        const maxDiscount=document.getElementById('maxDiscount')



        const categoryError=document.getElementById('categoryError')
        const categoryDiscountError=document.getElementById('categoryDiscountError')
        const maxDiscountError=document.getElementById('maxDiscountError')


        function checkCategory(val){
            if(val.trim()<1){
                categoryError.innerText="Cannot be empty"
                return false
            }
            categoryError.innerText=""
            return true
        }

        function checkDiscount(val){
            if(val<0 || val>99 ){
                categoryDiscountError.innerText="Should be a valid discount in percentage"
                return false
            }
            categoryDiscountError.innerText=""
            return true
        }



        function checkMaxDiscount(val){
            if(val<0 || val>2000){
                maxDiscountError.innerText="Should be valid and cannot empty"
                return false
            }
            maxDiscountError.innerText=""
            return true
        }


        function checkForm(){
            const isCategory=checkCategory(category.value)
            const isDiscount=checkDiscount(discount.value)
            const isMaxDis=checkMaxDiscount(maxDiscount.value)

            if(isCategory && isDiscount && isMaxDis){
                return true
            }else{
                return false
            }
        }
    </script>
