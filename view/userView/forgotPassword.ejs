    <script>

        const otpInput = document.getElementById('otp');
        const passwordInput = document.getElementById('newPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword')

        const otpValidationMessage = document.getElementById('otpValidationMessage');
        const passwordValidationMessage = document.getElementById('passwordValidationMessage');
        const confirmPasswordValidationMessage = document.getElementById('confirmPasswordValidationMessage')



        otpInput.addEventListener('input', () => {
            const otp = otpInput.value;
            const isValid = validateOtp(otp);

        });
        passwordInput.addEventListener('input', () => {
            const password = passwordInput.value;
            const isValid = validatePassword(password);

        });
        confirmPasswordInput.addEventListener('input', () => {
            const pass = passwordInput.value;
            const password = confirmPasswordInput.value;
            const isValid = validateConfirmPassword(pass, password);

        });


        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$%^&+=!])(?=\S+$).{8,}$/;
        const otpRegex = /^\d+$/;



        function validateOtp(otp) {
            if (!otpRegex.test(otp.trim())) {
                otpValidationMessage.textContent = "OTP can only have digits"
                return false
            }
            otpValidationMessage.textContent = ""
            return true
        }


        function validatePassword(password) {
            if (password.trim().length < 1) {
                passwordValidationMessage.textContent = "Password cannot be empty"
                return false
            }
            if (!passwordRegex.test(password.trim())) {
                passwordValidationMessage.textContent = "Password must contain one uppercase , one lowercase, one special character and one digit"
                return false
            }
            passwordValidationMessage.textContent = ""
            return true
        }


        function validateConfirmPassword(pass, confirm) {
            if (pass !== confirm) {
                confirmPasswordValidationMessage.textContent = "Password should be same"
                return false
            }
            confirmPasswordValidationMessage.textContent = ""
            return true
        }

        function checkFormValidity() {
            let otpIsValid=validateOtp(otpInput.value)
            let passwordIsValid = validatePassword(passwordInput.value);
            let confirmPassword = validateConfirmPassword(passwordInput.value, confirmPasswordInput.value)

            if ( otpIsValid && passwordIsValid && confirmPassword) {
                return true
            } else {
                return false
            }
        }
    </script>
