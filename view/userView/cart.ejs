    <script>
        function updateQuantity(userId, cartId, productId, count) {
            
            $.ajax({
                url: '/updateCartQuantity',
                method: 'POST',
                data: JSON.stringify({ userId, cartId, productId, count }),
                contentType: 'application/json',
                success: (response) => {
                    $('.qty-val[data-item-id="' + cartId + '"]').text(response.updatedQuantity);
                    $('.qtyTotal-val[data-item-id="' + cartId + '"]').text(response.productValue);
                    $('.cartTotal[data-item-id="cartTotal"]').text(response.cartTotal);

                    if (response.error) {
                        // Display a SweetAlert with a custom title and icon
                        Swal.fire({
                            title: 'Warning',
                            text: response.error,
                            icon: 'warning' // You can change 'warning' to other supported icons, e.g., 'info', 'success', 'error'
                        });
                    }

                }
            });
        }
    </script>



