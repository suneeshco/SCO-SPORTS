        document.getElementById('placeForm').addEventListener('click', function (event) {
            event.preventDefault();
            <% if (items.length < 1) { %>
                Swal.fire({
                    title: 'Cart is empty',
                    text: 'Please add items to your cart before placing an order.',
                    icon: 'error'
                });
            <% } else { %>
                var formData = $('#placeOrder').serialize();
                $.ajax({
                    type: "POST",
                    url: "/placeOrder", // Your form's action URL
                    data: formData,
                    success: (response) => {
                        if (response.error) {
                            Swal.fire({
                                title: 'Warning',
                                text: response.error,
                                icon: 'warning'
                            });
                        }
                        if(response.codSuccess) {
                            window.location.href = `/orderSuccessful/${response.ordered}`
                        }
                        if(response.responsed){
                            razorpayPayment(response.responsed)
                        }

                        

                    }
                })
                    <%}%>
            })

            function verifyPayment(payment,order){
            $.ajax({
                url:"/verifyPayment/<%=userData._id%>",
                data:{
                    payment,order
                },
                method:'POST',
                success:(response)=>{
                    if(response.orderId){
                        window.location.href=`/orderSuccessful/${response.orderId}`
                    }
                }

            })
        }
