    <script>
        function addToWish(productId, userId , size) {
            const count=document.getElementById('wishlistCount')
            $.ajax({
                url: '/addToWishlist',
                method: 'POST',
                data: JSON.stringify({ productId, userId, size}),
                contentType: 'application/json',
                success: (response) => {
                    // $('.qty-val[data-item-id="' + cartId + '"]').text(response.updatedQuantity),
                    // $('.qtyTotal-val[data-item-id="' + cartId + '"]').text(response.productValue);
                    if(response.added){
                    Swal.fire({
                    title: 'Success',
                    text: 'Item added to the wishlist',
                    icon: 'success'
                    });
                    count.innerHTML=response.count
                    }
                    if(response.exist){
                        Swal.fire({
                    title: 'Warning',
                    text: 'Item already in the wishlist',
                    icon: 'warning'
                    });
                    }
                }
            })
        }
    </script>
